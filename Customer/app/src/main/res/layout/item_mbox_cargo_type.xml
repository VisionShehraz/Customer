<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cargo_type"
    android:layout_width="match_parent"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="7dp"
        card_view:cardElevation="7sp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center_vertical"
         android:orientation="horizontal">

         <RelativeLayout
          android:layout_width="100dp"
          android:layout_height="100dp">

            <ImageView
             android:id="@+id/cargo_image"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:scaleType="centerCrop"
             android:src="@drawable/ic_mbox" />
          </RelativeLayout>


         <RelativeLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="5dp">

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:padding="8dp">

        <TextView
            android:id="@+id/cargo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/mbox_pickup"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/cargo_dimension"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/mbox_dimension"
            android:textColor="@color/grey"
            android:textSize="13sp" />

             <TextView
            android:id="@+id/cargo_max_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/mbox_maxweight"
            android:textColor="@color/grey"
            android:textSize="13sp" />

    </LinearLayout>


         </RelativeLayout>
     </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>