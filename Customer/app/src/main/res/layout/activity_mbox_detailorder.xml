                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_promotion_code"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="@string/mbox_insurance"
                        android:textColor="@color/material_blue_grey_700"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/insurance_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:textColor="@color/material_blue_grey_700"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/background_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_mbox_payment"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="@string/mbox_payment_method"
                        android:textColor="@color/material_blue_grey_700"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/mpay_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:textColor="@color/material_blue_grey_700"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blueSoft"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="25dp"
                        android:text="TOTAL"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/total_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:text="Rp. 125000"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:id="@+id/order_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/material_green_500"
                    android:text="@string/text_order"
                    android:textColor="@color/material_light_white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/neosanspro_medium"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
