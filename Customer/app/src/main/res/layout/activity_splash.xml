        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_marginLeft="25dp"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"></LinearLayout>

