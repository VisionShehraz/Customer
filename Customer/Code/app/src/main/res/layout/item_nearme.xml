<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nearme_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="4dp"
        card_view:cardElevation="4sp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">

        <FrameLayout
            android:id="@+id/promo_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/nearme_img"
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:background="@drawable/no_image"/>

        </FrameLayout>
    </android.support.v7.widget.CardView>



    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/nearme_resto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/home_mFood"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"

                />


            <TextView
                android:id="@+id/nearme_closed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:layout_below="@id/nearme_resto"
                android:layout_toEndOf="@+id/nearme_mitra"
                android:background="@drawable/border_text_red"
                android:padding="4dp"
                android:text="@string/food_closed"
                android:textColor="@color/material_red_700"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/nearme_mitra"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_below="@id/nearme_resto"
                android:background="@drawable/border_text"
                android:padding="4dp"
                android:text="@string/food_partner"
                android:textColor="@color/material_green_500"
                android:textSize="12sp"

                />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@+id/nearme_resto"
                android:background="@color/background_color" />

            <TextView
                android:id="@+id/nearme_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"

                android:layout_marginLeft="15dp"
                android:text="2.1 KM | Distriic Ali Gufran"
                android:textColor="@color/black"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/nearme_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nearme_address"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text=" BUKA 12.00 - 21.00"
                android:textColor="@color/black"
                android:textSize="14sp"
                />



        </RelativeLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/background_color"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>