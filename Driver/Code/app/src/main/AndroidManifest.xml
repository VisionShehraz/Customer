<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gotaxiride.driver">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->

    <uses-permission android:name="net.gumcode.drivermangjek.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:theme">
        <activity
            android:name="com.gotaxiride.driver.activity.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gotaxiride.driver.activity.LoginActivity"
            android:theme="@style/AppTheme.MyTheme.NoActionBar" />
        <activity
            android:name="com.gotaxiride.driver.MainActivity"
            android:label="Driver"
            android:theme="@style/AppTheme.MyTheme.NoActionBar" />
        <!--
             The API key for Google Maps-based APIs is defined as a string resource.
             (See the file "res/values/google_maps_api.xml").
             Note that the API key is linked to the encryption key used to sign the APK.
             You need a different API key for each encryption key, including the release key that is used to
             sign the APK for publishing.
             You can define the keys for the debug and release targets in src/debug/ and src/release/. 
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="com.gotaxiride.driver.activity.NotificationActivity"
            android:label="@string/notif_activity" />

        <!-- <receiver android:name=".service.BootCompleteBroadcastReceiver"> -->
        <!-- <intent-filter> -->
        <!-- <action android:name="android.intent.action.BOOT_COMPLETED" /> -->
        <!-- </intent-filter> -->
        <!-- </receiver> -->

        <service android:name="com.gotaxiride.driver.service.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name="com.gotaxiride.driver.service.MyFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name="com.gotaxiride.driver.service.LocationService"
            android:icon="@mipmap/ic_launcher"
            android:label="Location Service"
            android:process=":locationService" />

        <activity
            android:name="com.gotaxiride.driver.activity.ChatActivity"
            android:label="Chat">
            <intent-filter>
                <action android:name="YOUR_ACTION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gotaxiride.driver.activity.RatingUserActivity"
            android:label="Finish Order" />
        <activity android:name="com.gotaxiride.driver.activity.ItemConfirmActivity" />
        <activity
            android:name="com.gotaxiride.driver.activity.EditProfilPicture"
            android:label="Edit Foto Profil" />
        <activity
            android:name="com.gotaxiride.driver.activity.EditSettingActivity"
            android:label="Edit Setting" />
        <activity
            android:name="com.gotaxiride.driver.activity.EditSettingVehicleActivity"
            android:label="Edit Kendaraan" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_motor_notif" />
        <!--
             Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more.
        -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/yellow" />

        <activity
            android:name="com.gotaxiride.driver.activity.DestinasiMboxActivity"
            android:label="Destinasi Pengiriman" />
        <activity
            android:name="com.gotaxiride.driver.activity.DeliveryDetailsActivity"
            android:label="Detail Pengiriman" />
        <activity
            android:name="com.gotaxiride.driver.activity.ItemListActivity"
            android:label="Daftar Barang Belanja" />
        <activity
            android:name="com.gotaxiride.driver.activity.FoodListActivity"
            android:label="Daftar Barang Belanja" />
        <activity
            android:name="com.gotaxiride.driver.activity.MapsActivity"
            android:label="@string/title_activity_maps" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.gotaxiride.driver.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity android:name="com.gotaxiride.driver.activity.BrowserActivity" />
        <activity android:name="com.gotaxiride.driver.activity.ForgotPasswordActivity"></activity>
    </application>

</manifest>